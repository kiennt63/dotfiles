# Open alacritty
# alt - return : /Applications/Alacritty.app/Contents/MacOS/alacritty --working-directory ~
alt - return : /Applications/WezTerm.app/Contents/MacOS/wezterm
alt - w : /Applications/Brave\ Browser.app/Contents/MacOS/Brave\ Browser

# Close focused window
# shift + alt - c: yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus recent || yabai -m window --focus first"; yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus recent || yabai -m window --focus first"
shift + alt - c: yabai -m window --close

# Window navigation
# alt - j : yabai -m window --focus next || yabai -m window --focus first
# alt - k : yabai -m window --focus prev || yabai -m window --focus last

alt - j : $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "/Users/neik/.config/skhd/focus_next_bsp.sh" else "yabai-stack-navigator --next" end')

alt - k : $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "/Users/neik/.config/skhd/focus_prev_bsp.sh" else "yabai-stack-navigator --prev" end')

shift + alt - j : /Users/neik/.config/skhd/cycle_window_clockwise.sh
shift + alt - k : /Users/neik/.config/skhd/cycle_window_counter_clockwise.sh

# Spaces navigation
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10

