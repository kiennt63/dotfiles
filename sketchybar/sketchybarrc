#!/bin/sh

source $HOME/dotfiles/sketchybar/schemes/palette.sh

PLUGIN_DIR="$HOME/dotfiles/sketchybar/plugins"

sketchybar --bar height=48 \
    position=top \
    padding_left=10 \
    padding_right=10 \
    color=0x00ffffff

sketchybar --default icon.font="Maple Mono:Semibold:15.0" \
    icon.color=${FG0} \
    label.font="Maple Mono:Semibold:15.0" \
    label.color=${FG0} \
    background.color=${BG0} \
    background.corner_radius=8 \
    background.height=30 \
    padding_left=0 \
    padding_right=10 \
    label.padding_left=4 \
    label.padding_right=10 \
    icon.padding_left=13 \
    icon.padding_right=12

# Left items
source $HOME/dotfiles/sketchybar/items/spaces.sh

source $HOME/dotfiles/sketchybar/items/front_app.sh

# Middle items
# source $ITEM_DIR/media.sh

# Right items
source $HOME/dotfiles/sketchybar/items/calendar.sh
source $HOME/dotfiles/sketchybar/items/volume.sh
source $HOME/dotfiles/sketchybar/items/battery.sh
source $HOME/dotfiles/sketchybar/items/cpu.sh

sketchybar --update
