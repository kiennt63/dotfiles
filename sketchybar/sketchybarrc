sketchybar --add item net right \
           --set net update_freq=1 \
		   			 script="/Users/neik/.config/sketchybar/plugins/net.sh" \
					 icon= \
                     label.color=0xffA3BE8C \
                     icon.color=0xffA3BE8C 

sketchybar --add item battery right \
           --set battery update_freq=30 \
                         script="/Users/neik/.config/sketchybar/plugins/power.sh" \
                         label.color=0xffEBCB8B \
                         icon.color=0xffEBCB8B 

sketchybar --add item sound right     \
           --set sound                \
                 update_freq=1              \
                 script="/Users/neik/.config/sketchybar/plugins/sound.sh" \
                 label.color=0xffEBCB8B \
                 icon.color=0xffEBCB8B 
############## FINALIZING THE SETUP ##############
sketchybar --update

echo "sketchybar configuration loaded..."
