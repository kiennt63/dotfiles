cpu_idle=$(mpstat -P ALL | grep "all"  | sed 's/.* \(.*\),\(.*\)/\1/')
cpu_usage=$((100 - $cpu_idle))
# cpu_usage=$((100 - cpu_idle))
# cpu_usage=$(echo $((100 - $(mpstat -P ALL | grep "all"  | sed 's/.* \(.*\),\(.*\)/\1.\2/'))) | sed 's/\(....\)/\1/')
